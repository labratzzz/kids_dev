{% extends('base.html.twig') %}

{% block pagetitle %}
    {% if title is defined %}
        {{ title }}
    {% else %}
        Форма
    {% endif %}
{% endblock %}

{% block body %}
    <section class="container mt-2 p-3">
        {% for message in app.flashes('fail') %}
            <div class="alert alert-danger">
                {{ message }}
            </div>
        {% endfor %}
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
        <div class="row justify-content-center">
            <div class="col-md-6 bg-light border-top border-start border-end border-warning border-3 text-center px-5 pt-5 max-rounded-top">
                {% block beforeform %}{% endblock %}
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-md-6 bg-light border-bottom border-start border-end border-warning border-3 p-5 max-rounded-bottom">
                {% block form %}{% endblock %}
            </div>
        </div>
    </section>
{% endblock %}